# ============================================
# YMERA Multi-Agent AI System - Production Configuration
# ============================================
# IMPORTANT: This file contains example values.
# Copy this file to .env and update with secure values before deploying.
# Never commit the actual .env file to version control!

# ============================================
# Application Settings
# ============================================
APP_NAME=YMERA Multi-Agent AI System
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# IMPORTANT: Change these credentials in production!
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
POSTGRES_DB=ymera
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_THIS_PASSWORD_IN_PRODUCTION@postgres:5432/ymera
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# IMPORTANT: Set a strong password for Redis in production!
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION

# ============================================
# NATS Configuration
# ============================================
NATS_SERVERS=nats://nats:4222

# ============================================
# Security & Authentication
# ============================================
# IMPORTANT: Generate a strong random secret key!
# Example: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ============================================
# Monitoring & Observability
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# ============================================
# Agent System Configuration
# ============================================
MAX_AGENTS=1000
AGENT_TIMEOUT=300
MESSAGE_QUEUE_SIZE=10000
AGENT_HEARTBEAT_INTERVAL=30

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_FILE_PATH=/app/logs/ymera.log

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================
# File Upload Configuration
# ============================================
MAX_UPLOAD_SIZE=100M
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,csv,json,xml

# ============================================
# WebSocket Configuration
# ============================================
WS_BASE_URL=wss://yourdomain.com/ws
WS_MAX_CONNECTIONS=1000
WS_MESSAGE_SIZE_LIMIT=65536
WS_HEARTBEAT_INTERVAL=30

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=true

# ============================================
# Backup Configuration (Optional)
# ============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================
# SSL/TLS Configuration (Optional)
# ============================================
# Enable when SSL certificates are available
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/certs/cert.pem
SSL_KEY_PATH=/etc/nginx/certs/key.pem

# ============================================
# Production Optimization
# ============================================
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# ============================================
# Feature Flags
# ============================================
ENABLE_AGENT_LEARNING=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_PATTERN_RECOGNITION=true
ENABLE_QUANTUM_ENCRYPTION=false

# ============================================
# Development/Testing (Disable in Production)
# ============================================
ENABLE_API_DOCS=false
ENABLE_SWAGGER_UI=false
ENABLE_TEST_ENDPOINTS=false
